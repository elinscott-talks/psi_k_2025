@article{Zhang2021,
  title = {Magnetic and f-electron effects in {{LaNiO2}} and {{NdNiO2}} nickelates with cuprate-like 3d{\textsubscript{x{\textsuperscript{2}}-y{\textsuperscript{2}}}} band},
  author = {Zhang, Ruiqi and Lane, Christopher and Singh, Bahadur and Nokelainen, Johannes and Barbiellini, Bernardo and Markiewicz, Robert S. and Bansil, Arun and Sun, Jianwei},
  date = {2021-06-07},
  journaltitle = {Commun Phys},
