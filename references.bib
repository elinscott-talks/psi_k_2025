@article{Ingall2024,
  title = {Accurate and {{Efficient Computation}} of the {{Fundamental Bandgap}} of the {{Vacancy-Ordered Double Perovskite Cs}}{\textsubscript{2}}{{TiBr}}{\textsubscript{6}}},
  author = {Ingall, J. E. and Linscott, Edward and Colonna, Nicola and Page, Alister J. and Keast, Vicki J.},
