  author = {Morton, Jennifer and Chrysina, Maria and Craig, Vincent S.J. and Akita, Fusamichi and Nakajima, Yoshiki and Lubitz, Wolfgang and Cox, Nicholas and Shen, Jian-Ren and Krausz, Elmars},
