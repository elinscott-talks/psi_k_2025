@article{Atalla2016,
  title = {Enforcing the linear behavior of the total energy with hybrid functionals: {{Implications}} for charge transfer, interaction energies, and the random-phase approximation},
  shorttitle = {Enforcing the linear behavior of the total energy with hybrid functionals},
  author = {Atalla, Viktor and Zhang, Igor Ying and Hofmann, Oliver T. and Ren, Xinguo and Rinke, Patrick and Scheffler, Matthias},
