  abstract = {The accurate prediction of electronic and optical properties of molecules and solids is a persistent challenge for methods based on density functional theory. We propose a generalization of dielectric-dependent hybrid functionals to finite systems where the definition of the mixing fraction of exact and semilocal exchange is physically motivated, nonempirical, and system dependent. The proposed functional yields ionization potentials, and fundamental and optical gaps of many, diverse molecular systems in excellent agreement with experiments, including organic and inorganic molecules and semiconducting nanocrystals. We further demonstrate that this hybrid functional gives the correct alignment between energy levels of the exemplary TTF-TCNQ donor-acceptor system.}
}

@article{Brito2016,
  title = {Metal-{{Insulator Transition}} in {{VO2}}: {{A DFTDMFT Perspective}}},
  author = {Brito, W. H. and Aguiar, M. C.O. and Haule, K. and Kotliar, G.},
  date = {2016-07-27},
