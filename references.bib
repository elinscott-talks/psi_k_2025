@article{Wang2017,
  title = {Insights into {{Photosystem II}} from {{Isomorphous Difference Fourier Maps}} of {{Femtosecond X-ray Diffraction Data}} and {{Quantum Mechanics}}/{{Molecular Mechanics Structural Models}}},
