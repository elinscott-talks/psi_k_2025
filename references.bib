@article{Yang2022a,
  title = {Electronic {{Structure}} of {{InAs}} and {{InSb Surfaces}}: {{Density Functional Theory}} and {{Angle-Resolved Photoemission Spectroscopy}}},
  shorttitle = {Electronic {{Structure}} of {{InAs}} and {{InSb Surfaces}}},
  author = {Yang, Shuyang and Schröter, Niels B. M. and Strocov, Vladimir N. and Schuwalow, Sergej and Rajpalk, Mohana and Ohtani, Keita and Krogstrup, Peter and Winkler, Georg W. and Gukelberger, Jan and Gresch, Dominik and Aeppli, Gabriel and Lutchyn, Roman M. and Marom, Noa},
