@article{Marini2021,
  title = {Lattice dynamics of photoexcited insulators from constrained density-functional perturbation theory},
  author = {Marini, Giovanni and Calandra, Matteo},
  date = {2021-10-07},
  journaltitle = {Phys. Rev. B},
  volume = {104},
