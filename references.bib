@article{Orhan2020,
  title = {First-principles {{Hubbard}} {{{\emph{U}}}} and {{Hund}}'s {{{\emph{J}}}} corrected approximate density functional theory predicts an accurate fundamental gap in rutile and anatase {{TiO}}{\textsubscript{2}}2},
