@article{Lambert2021,
  title = {{{DFT}}+{{U}}+{{J}} with linear response parameters predicts non-magnetic oxide band gaps with hybrid-functional accuracy},
  author = {Lambert, Daniel S. and O'Regan, David D.},
  date = {2021-11-16},
  journaltitle = {ArXiv211108487 Cond-Mat Physicsphysics},
  eprint = {2111.08487},
