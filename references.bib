}

@article{Deng2019,
  title = {Signatures of {{Mottness}} and {{Hundness}} in archetypal correlated metals},
  author = {Deng, Xiaoyu and Stadler, Katharina M. and Haule, Kristjan and Weichselbaum, Andreas and family=Delft, given=Jan, prefix=von, useprefix=true and Kotliar, Gabriel},
