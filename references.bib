@article{delaTorre2021,
  title = {Colloquium: {{Nonthermal}} pathways to ultrafast control in quantum materials},
  shorttitle = {Colloquium},
  author = {family=Torre, given=Alberto, prefix=de la, useprefix=true and Kennes, Dante M. and Claassen, Martin and Gerber, Simon and McIver, James W. and Sentef, Michael A.},
