@article{Egger2015,
  title = {Reliable {{Energy Level Alignment}} at {{Physisorbed Molecule}}–{{Metal Interfaces}} from {{Density Functional Theory}}},
  author = {Egger, David A. and Liu, Zhen-Fei and Neaton, Jeffrey B. and Kronik, Leeor},
