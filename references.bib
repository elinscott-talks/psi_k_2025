  doi = {10.1063/1.2387954},
  abstract = {Semilocal density functional approximations for the exchange-correlation energy can improperly dissociate a neutral molecule  𝑋𝑌 XY   (𝑌≠𝑋) (Y≠X)  to fractionally charged fragments  𝑋 +𝑞 ⋯ 𝑌 −𝑞 X+q⋯Y−q  with an energy significantly lower than  𝑋 0 ⋯ 𝑌 0 X0⋯Y0 . For example, NaCl can dissociate to  Na +0.4 ⋯ Cl −0.4 Na+0.4⋯Cl−0.4 . Generally,  𝑞 q  is positive when the lowest-unoccupied orbital energy of atom  𝑌 0 Y0  lies below the highest-occupied orbital energy of atom  𝑋 0 X0 . The first 24 open  𝑠𝑝 sp -shell atoms of the Periodic Table can form 276 distinct unlike pairs  𝑋𝑌 XY , and in the local spin density approximation 174 of these display fractional-charge dissociation. Finding these lowest-energy solutions with standard quantum chemistry codes, however, requires special care. Self-interaction-corrected (SIC) semilocal approximations are exact for one-electron systems and also reduce the spurious fractional charge  𝑞 q . The original SIC of Perdew and Zunger typically reduces  𝑞 q  to 0. A scaled-down SIC with better equilibrium properties sometimes fails to reduce  𝑞 q  all the way to 0. The desideratum of “many-electron self-interaction freedom” is introduced as a generalization of the one-electron concept.}
}

@article{Ruzsinszky2007,
  title = {Density functionals that are one- and two- are not always many-electron self-interaction-free, as shown for {{H2}}+, {{He2}}+, {{LiH}}+, and {{Ne2}}+},
  author = {Ruzsinszky, Adrienn and Perdew, John P. and Csonka, Gábor I. and Vydrov, Oleg A. and Scuseria, Gustavo E.},
