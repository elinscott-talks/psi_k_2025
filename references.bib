  shorttitle = {From unstable {{CsSnI3}} to air-stable {{Cs2SnI6}}},
  author = {Qiu, Xiaofeng and Cao, Bingqiang and Yuan, Shuai and Chen, Xiangfeng and Qiu, Zhiwen and Jiang, Yanan and Ye, Qian and Wang, Hongqiang and Zeng, Haibo and Liu, Jian and Kanatzidis, Mercouri G.},
