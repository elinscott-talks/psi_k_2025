@article{Brawand2016,
  title = {Generalization of {{Dielectric-Dependent Hybrid Functionals}} to {{Finite Systems}}},
  author = {Brawand, Nicholas P. and Vörös, Márton and Govoni, Marco and Galli, Giulia},
