@online{Camarasa-Gomez2023,
  title = {Transferable screened range-separated hybrid functionals for electronic and optical properties of van der {{Waals}} materials},
  author = {Camarasa-Gómez, María and Ramasubramaniam, Ashwin and Neaton, Jeffrey B. and Kronik, Leeor},
